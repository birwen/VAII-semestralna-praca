@page
@model VAII_semestralna_praca.Pages.Poems.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Vytvoriť</h1>

<h4>Báseň</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Poem.Name" class="control-label">Meno autora</label>
                <input asp-for="Poem.Name" class="form-control" />
                <span asp-validation-for="Poem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poem.Text" class="control-label"></label>
                <input asp-for="Poem.Text" id="file-content" class="form-control" />
                <input type="file" id="file-input" class="btn btn-primary">
                <span asp-validation-for="Poem.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poem.Genre" class="control-label">Žáner</label>
                <select asp-for="Poem.Genre" asp-items="Html.GetEnumSelectList<Enums.Genres>()" class="form-control"></select>
                <span asp-validation-for="Poem.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Vytvoriť" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Späť na zoznam.</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
