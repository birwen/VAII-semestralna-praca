@page
@model VAII_semestralna_praca.Pages.Authors.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Vytvoriť</h1>

<h4>Autori</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Author.Name" class="control-label">Meno a priezvisko</label>
                <input asp-for="Author.Name" class="form-control" />
                <span asp-validation-for="Author.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Birth" class="control-label">Dátum narodenia</label>
                <input asp-for="Author.Birth" class="form-control" />
                <span asp-validation-for="Author.Birth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Death" class="control-label">Dátum úmrtia</label>
                <input asp-for="Author.Death" class="form-control" />
                <span asp-validation-for="Author.Death" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Pridať" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Späť na zoznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
