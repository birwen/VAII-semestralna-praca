@page
@model VAII_semestralna_praca.Pages.Authors.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Pridať</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author[0].Name)
                <p>Meno a priezvisko</p>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author[0].Birth)
                <p>Dátum narodenia</p>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author[0].Death)
                <p>Dátum úmrtia</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Author) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Death)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Zmeniť</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Podrobnosti</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Vymazať</a>
            </td>
        </tr>
}
    </tbody>
</table>
